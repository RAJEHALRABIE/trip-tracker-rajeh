rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(resourceData) {
      return isSignedIn() && resourceData.ownerId == request.auth.uid;
    }

    function isSharedWith(resourceData) {
      return isSignedIn() && (resourceData.sharedWith != null && request.auth.uid in resourceData.sharedWith);
    }

    // users: كل مستخدم يقرأ/يحدّث ملفه فقط
    match /users/{uid} {
      allow create: if isSignedIn() && request.resource.data.keys().hasOnly(['displayName','photoURL','createdAt'])
                    && request.resource.data.createdAt <= request.time;
      allow read, update, delete: if isSignedIn() && request.auth.uid == uid;
    }

    // trips: المالك أو من تمت مشاركتها معه
    match /trips/{tripId} {
      allow read: if isOwner(resource.data) || isSharedWith(resource.data);

      allow create: if isSignedIn()
        && request.resource.data.keys().hasOnly(['title','ownerId','createdAt','updatedAt','sharedWith','meta'])
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.createdAt <= request.time
        && request.resource.data.updatedAt <= request.time;

      allow update, delete: if isOwner(resource.data)
        && request.resource.data.ownerId == resource.data.ownerId
        && request.resource.data.updatedAt <= request.time;

      // نقاط المسار التابعة للرحلة
      match /points/{pointId} {
        allow read: if isOwner(get(/databases/$(database)/documents/trips/$(tripId)).data)
                     || isSharedWith(get(/databases/$(database)/documents/trips/$(tripId)).data);

        // إنشاء فقط (لتثبيت السجل)
        allow create: if isOwner(get(/databases/$(database)/documents/trips/$(tripId)).data)
          && request.resource.data.keys().hasOnly(['lat','lng','ts','accuracy','speed','heading'])
          && request.resource.data.ts <= request.time;

        allow update, delete: if false;
      }
    }

    // analytics: وصول مقيّد (اختياري)
    match /analytics/{doc} {
      allow read, create, update, delete: if isSignedIn() && (request.auth.token.admin == true);
    }
  }
}
